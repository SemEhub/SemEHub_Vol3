import numpy as np
import matplotlib.pyplot as plt

#Constants
q = 1.6e-19          #Electronic charge (C)
Vbi = 0.7            #Built-in potential (V)
eps_0 = 8.85e-14     #Vacuum permittivity (F/cm)
eps_si = 11.7*eps_0  #Silicon permittivity (F/cm)
Na = 1e18            #Doping concentration (cm^-3)
Nd = 1e18            #Doping concentration (cm^-3)

#Reverse bias voltage
Vr_values = np.linspace(0,10,100)    #Range of reverse bias voltage

#Expression of peak electric field
E_peak = np.sqrt((2*q*((Na*Nd)/(Na+Nd)*(Vbi+Vr_values)))/eps_si)

# 2D plot of Peak electric field in a pn junction vs. Reverse Bias Voltage
plt.figure(figsize=(10, 6))
plt.plot(Vr_values, E_peak)

# Labels and title
plt.xlabel('Reverse Bias Voltage, Vr (V)')
plt.ylabel('Peak electric field, E_peak (V/cm)')
plt.title('Peak electric field in a pn junction vs. Reverse Bias Voltage')
plt.grid(True)

# Display the plot
plt.show()
