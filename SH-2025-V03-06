import numpy as np
import matplotlib.pyplot as plt

#Constants
q = 1.6e-19          #Electronic charge (C)
Vbi = 0.7            #Built-in potential (V)
eps_0 = 8.85e-14     #Vacuum permittivity (F/cm)
eps_si = 11.7*eps_0  #Silicon permittivity (F/cm)
Na = 1e17            #Doping concentration (cm^-3)
Nd = 1e17            #Doping concentration (cm^-3)

#Critical electric field
E_crit_values = np.logspace(5,8,100)    #Range of Critical Electric Field from 1e5 to 1e8 V/cm

#Expression of breakdown voltage
Vr_breakdown = ((eps_si*(E_crit_values**2)*(Na+Nd))/(2*q*Na*Nd))-Vbi

# 2D plot of Breakdown voltage vs. Critical electric field
plt.figure(figsize=(10, 6))
plt.plot(E_crit_values, Vr_breakdown)

# Add labels and title
plt.xlabel('Critical Electric Field, E_crit (V/cm)')
plt.ylabel('Breakdown Voltage, V_breakdown (V)')
plt.title('Breakdown Voltage vs. Critical Electric Field')
plt.grid(True)

# Set axes to logarithmic scale
plt.xscale('log')
plt.yscale('log')

# Display the plot
plt.show()
